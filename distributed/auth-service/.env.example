# Auth Service Environment Configuration
# Copy this file to .env and update values as needed

APP_NAME="Auth Service"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://auth-service:8001

SERVICE_PORT=8001

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=auth-db
DB_PORT=3306
DB_DATABASE=auth_db
DB_USERNAME=root
DB_PASSWORD=

# Cache & Queue Configuration
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CLIENT=phpredis

# Logging Configuration
LOG_CHANNEL=stderr
LOG_LEVEL=info

# Filesystem Configuration
FILESYSTEM_DISK=local
